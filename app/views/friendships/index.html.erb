<h4>Friends List are</h4>
<body style ="background-color: #A4C8EC";>
 <table class="table table-bordered">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>

    <% @friendships.each do|frnd| %>
      <tr>
        <td><%= User.find(frnd.user_id).firstname %></td>
        <td><%= User.find(frnd.user_id).lastname %></td>
        <td><%#= link_to 'Remove',friendship_path(frnd.user_id.to_s), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%end%>
   
    <% @friends.each do|frnd| %>
      <tr>
        <td><%= User.find(frnd.friend_id).firstname %></td>
        <td><%= User.find(frnd.friend_id).lastname %></td>
    <%end%>
    </tr>     
  </table>
</body>
