<body>
  <div class="wrapper", id = "main-content">
    <div style="width: 639px; height: 780px; padding-top: 0px; padding-bottom: 0px; margin-top: -784px;">

  		<div>
    		<table border ="1">
    		 <tr><strong><center>Post</center></strong></tr></table> 
    		 <tr><td><%= @post.post_artical %></td></tr>
    		</table>
  		</div>

      <h4>Comments</h3>
      <table class="table table-sm">
        <% @post.comments.each do |comment| %>
        <tr>
          <td><%= comment.comment_post %></td>
          <td><%= link_to 'Delete Comment', [comment.post, comment],method: :delete,data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </table>

      <div>
    	<%= form_for([@post, @post.comments.build]) do |f| %>

    	    <%= f.label :comment_post %><br>
    	    <%= f.text_area :comment_post %>
    	    <%= f.submit%>
    	<% end %>
    	</div>
    </div>
  </div>
  <%= link_to 'Back', posts_path %>
</body>
