<body style="background-color:#FBCBCB;">
  <h2>Profile</h2>
  <%= form_for @profile, url:user_profiles_path(current_user),:action =>'create' do |f| %>
    <div class="form-group">
      <%= f.label :address, class: 'col-sm-0 control-label' %> <br />
        <div class="col-sm-2">
         <%= f.text_field :address, class: 'form-control'  %>
        </div><br />
    </div>

    <div class="form-group">
      <%= f.label :contact, class: 'col-sm-0 control-label'%><br />
      <div class="col-sm-2">
        <%= f.number_field :contact, class: 'form-control' %>
      </div> <br />
    </div>

    <div class="form-group">
      <%= f.label :qualification, class: 'col-sm-0 control-label'%><br />
      <div class="col-sm-2">
       <%= f.text_field :qualification, class: 'form-control'%>
      </div><br /> 
    </div>

    <div class="form-group">
      <%= f.label :dob, class: 'col-sm-1 control-label'  %>
      <div class="col-sm-6">
       <%= f.date_select :dob, start_year: 1920, end_year: 2100, class: 'form-control'  %>
      </div><br /> 
    </div>

    <div class="form-group">
      <%= f.label :gender %><br />
      <div class="col-sm-6">
        <%= f.label :gender, "Male"%>
        <%= f.radio_button 'gender', 'Male' %>
        <%= f.label :gender, "Female" %>
        <%= f.radio_button 'gender', 'Female' %>
      </div><br /> 
    </div>

    <div class="form-group">
        <%= f.submit  %>
    </div>
  <% end %>
  <td><%=link_to 'Back to home page', profiles_dashboard_path,class: "btn btn-primary btn-xs"%></td>
</body>
