<body style="background-color:#FBCBCB;">
  <h3>ALL Users</h3> 
  <table border= '2'>
    <tr>
      <th>FirstName</th>
      <th>LastName</th>
      <td></td>
    </tr>
    <% @user.each do |user| %>
    <tr>
      <td><%= user.firstname%></td>
      <td><%= user.lastname%></td>
      <% @frnd = current_user.friendships.map(&:friend_id) %>
        <% if @frnd.include?user.id %>
          <td><%= link_to 'Unfriend',user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%else%>
          <td><%= link_to 'Addtofriendlist',friendships_path(:friend_id => user), :method => :post%></td> 
        <%end%>

      <td><%= link_to 'Follow', relationships_path(:followed_id => user), method: :post %></td>
    </tr>
   
    <%end%>
  </table>
  <%=link_to 'back to home page', profiles_dashboard_path%>
</body> 
