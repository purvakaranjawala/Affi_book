<body style="background-color:#A4C8EC;">
  <h3>ALL Users</h3> 
  <table border= '2'>
    <tr>
      <th>FirstName</th>
      <th>LastName</th>
      <td></td>
    </tr>
    <% @user.each do |user| %>
    <tr>
      <td><%= user.firstname%></td>
      <td><%= user.lastname%></td>
      <% @frnd = current_user.friendships.map(&:friend_id) %>
        <% if @frnd.include?user.id %>
          <td><%= link_to 'Unfriend',friendship_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%else%>
          <td><%= link_to 'Addtofriendlist',friendships_path(:friend_id => user), :method => :post%></td> 
        <%end%>

      <%@foll= current_user.relationships.map(&:followed_id) %>
      <% if @foll.include?user.id %>
       <td><%= link_to 'Unfollow',relationship_path(user), method: :delete, data: { confirm: 'Are you sure?' }%></td>
      <%else%>
        <td><%= link_to 'Follow', relationships_path(:followed_id => user), method: :post %></td>
      <%end%>
    </tr>
   
    <%end%>
  </table>
</body> 
